# K-Law Assistant Environment Variables
# Copy this file to .env and fill in your actual API keys

# ========================================
# REQUIRED API KEYS
# ========================================

# 법제처 Open API Key
# Get your key from: https://open.law.go.kr
# 1. 회원가입 및 로그인
# 2. 마이페이지 → Open API 신청
# 3. 발급받은 OC 값을 입력
LAW_API_KEY=your_law_api_key_here

# OpenAI API Key
# Get your key from: https://platform.openai.com/api-keys
# 1. OpenAI 계정 생성
# 2. API keys 메뉴 접속
# 3. Create new secret key
# 4. sk-로 시작하는 키 입력
OPENAI_API_KEY=sk-your_openai_api_key_here

# ========================================
# OPTIONAL SETTINGS
# ========================================

# Default GPT Model
# Options: gpt-4o, gpt-4o-mini, gpt-4-turbo, gpt-3.5-turbo
DEFAULT_GPT_MODEL=gpt-4o-mini

# Cache Time To Live (seconds)
# How long to cache API responses
CACHE_TTL=3600

# Debug Mode
# Set to True for detailed logging
DEBUG=False

# ========================================
# STREAMLIT CLOUD DEPLOYMENT (Optional)
# ========================================

# If deploying to Streamlit Cloud, these can be set in the dashboard
# STREAMLIT_SERVER_PORT=8501
# STREAMLIT_SERVER_ADDRESS=0.0.0.0
# STREAMLIT_SERVER_HEADLESS=true
# STREAMLIT_BROWSER_GATHER_USAGE_STATS=false

# ========================================
# DATABASE SETTINGS (Future Enhancement)
# ========================================

# Database URL (if using database for history)
# DATABASE_URL=sqlite:///search_history.db

# Redis URL (if using Redis for caching)
# REDIS_URL=redis://localhost:6379/0

# ========================================
# LOGGING SETTINGS
# ========================================

# Log Level
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log File Path
LOG_FILE=app.log

# ========================================
# RATE LIMITING (API Protection)
# ========================================

# Maximum requests per minute
MAX_REQUESTS_PER_MINUTE=60

# Maximum tokens per request
MAX_TOKENS_PER_REQUEST=3000

# ========================================
# FEATURE FLAGS
# ========================================

# Enable/Disable specific features
ENABLE_TREATY_SEARCH=true
ENABLE_COMMITTEE_SEARCH=true
ENABLE_LOCAL_LAW_SEARCH=true
ENABLE_AI_ANALYSIS=true

# ========================================
# NOTES FOR DEVELOPERS
# ========================================
# 1. Never commit this file with real API keys
# 2. Use .env.example as a template
# 3. Add .env to .gitignore
# 4. For production, use environment variables from the hosting platform
